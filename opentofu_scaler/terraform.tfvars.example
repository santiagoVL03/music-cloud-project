# Ejemplo de configuración de variables para el cluster Kubernetes en AWS
# Copia este archivo a terraform.tfvars y ajusta los valores

# Región de AWS donde se desplegará el cluster
aws_region = "us-east-1"

# AMI ID para Ubuntu 24.04 LTS (verifica la AMI correcta para tu región)
# us-east-1: ami-0866a3c8686eaeeba
# us-west-2: ami-0aff18ec83b712f05
# eu-west-1: ami-0d71ea30463e0ff8d
ami_id = "ami-0866a3c8686eaeeba"

# Tipo de instancia para el nodo master (mínimo recomendado: t3.medium)
master_instance_type = "t3.medium"

# Tipo de instancia para los nodos worker
worker_instance_type = "t3.small"

# Número de nodos worker
worker_count = 2

# Tu clave pública SSH (corre: cat ~/.ssh/k8s-cluster-key.pub)
# Ejemplo: ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQDa..."
ssh_public_key = ""

# Ruta a tu clave privada SSH
ssh_private_key_path = "~/.ssh/k8s-cluster-key"
